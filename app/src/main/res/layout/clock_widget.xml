<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background"
    android:padding="16dp">

    <TextView
        android:id="@+id/hour_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:textColor="#000000"
        android:textSize="72sp"
        android:textStyle="bold"
        android:text="11" />

    <TextView
        android:id="@+id/slash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/hour_text"
        android:layout_alignBottom="@id/hour_text"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="18dp"
        android:textColor="#AAAAAA"
        android:textSize="72sp"
        android:text="/" />

    <TextView
        android:id="@+id/minute_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/slash"
        android:layout_alignBottom="@id/hour_text"
        android:textColor="#000000"
        android:textSize="72sp"
        android:textStyle="bold"
        android:text="34" />

    <TextView
        android:id="@+id/am_pm_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:textColor="#FF0000"
        android:textSize="20sp"
        android:text="am" />

    <TextView
        android:id="@+id/location_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/hour_text"
        android:layout_alignParentStart="true"
        android:textColor="#000000"
        android:textSize="20sp"
        android:text="Warszawa" />

</RelativeLayout>
